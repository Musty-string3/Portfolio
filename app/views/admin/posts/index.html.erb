<!--管理者、投稿一覧-->
<div class="container">
  <h3 class="text-center pb-3">投稿一覧</h3>
  <h5 class="text-center"><%= flash[:notice] if flash[:notice] %></h5>
  <% if @posts.present? %>
    <%= render 'public/posts/index', posts: @posts %>
  <% else %>
    <h4 class="text-center">投稿はまだありません</h4>
  <% end %>
</div>