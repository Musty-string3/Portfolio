<!--管理者のユーザーページ-->
<div class="container">
  <%= flash[:notice] if flash[:notice] %>
  <div class="row">
    <!--ユーザーアイコン-->
    <div class="col-lg-2">
      <div class="text-center mb-xs-0 mb-5">
        <%= image_tag @user.get_profile_image(150, 150), class:"border border-dark rounded-circle", width: 100, height: 100 %>
      </div>
    </div>
    <div class="col-lg-7">
      <h3 class="pt-1 pb-1">
        <%= @user.name %>
        <span class="float-right">
          <%= link_to "編集", edit_admin_user_path(@user), class:"btn btn-outline-success" %>
        </span>
      </h3>
      <div class="pt-1 pb-4">
        <h5><%= @user.introduction %></h5>
        <!--フォロー、フォロワー数-->
        <div class="d-flex">
          <div class="pt-1">
            フォロー中<%= @user.followings.count %>
            フォロワー<%= @user.followers.count %>
          </div>
          <div class="pl-2 pt-1">
            <% if @user == current_user && @entries_count > 0 %>
              <%= link_to rooms_path do %>
                <i class="fa-regular fa-envelope"></i>
              <% end %>
            <% end %>
          </div>
        </div>
        投稿数 <%= @user_posts.count %>投稿
      </div>
    </div>
  </div>
  <!--ユーザーの投稿-->
  <h4 class="text-center pb-3"><%= @user.name %>さんの投稿一覧</h4>
  <% if @user_posts.present? %>
    <%= render 'public/posts/index', posts: @user_posts %>
  <% else %>
    <h5 class="text-center">投稿はまだありません。</h5>
  <% end %>
</div>