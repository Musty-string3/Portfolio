<!--管理者のユーザーページ-->
<div class="container">
  <%= render 'layouts/flash' %>
  <div class="row pt-3">
    <div class="col-8 mx-auto">
      <div class="row">
        <div class="mx-auto">
          <div class="text-center mb-xs-0 mb-1">
            <%= image_tag @user.get_profile_image(150, 150), class:"border border-dark rounded-circle", width: 100, height: 100 %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <h4 class="pt-2">ユーザーID<span class="ml-3"><%= @user.id %></span></h4>
          <div class="border-bottom"></div>
          <h4 class="pt-2">ユーザー名</h4>
          <h5 class="ml-3"><%= @user.name %></h5>
          <div class="border-bottom"></div>
          <h4 class="pt-2">ユーザーの説明</h4>
          <h5 class="ml-3"><%= @user.introduction %></h5>
          <div class="border-bottom"></div>
          <h4 class="pt-2">フォロー中
            <span class="ml-3 pt-2"><%= @user.followings.count %>人</span>
          </h4>
          <h4 class="pt-2">フォロワー
            <span class="ml-3 pt-2"><%= @user.followers.count %>人</span>
          </h4>
          <div class="border-bottom"></div>
          <h4 class="pt-2">投稿数
            <span class="ml-3 pt-2"><%= @user_posts.count %>投稿</span>
          </h4>
          <div class="row justify-content-around pt-3">
            <%= link_to "会員一覧", admin_users_path, class:"btn btn-outline-primary" %>
            <%= link_to "編集", edit_admin_user_path(@user), class:"btn btn-outline-success" %>
            <% if @user_posts.present? %>
              <%= link_to "ユーザーの投稿一覧", admin_posts_path(user_id: @user.id), class:"btn btn-outline-info" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>