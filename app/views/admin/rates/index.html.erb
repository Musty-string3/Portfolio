<div class="container">
  <div class="row">
    <h6>
      このサイトの平均レビュー
      <span id="average"></span>
      <script>
        $(document).on('turbolinks:load', function() {
          let elem = document.getElementById('average');
          if (!elem) return;

          elem.innerHTML = "";
          let opt = {
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            score: <%= @average_rate %>,
            readOnly: true,
          };
          raty(elem, opt);
        });
      </script>
    </h6>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thead>
        <th class="col-lg-1">ID</th>
        <th class="col-lg-2">ユーザー名</th>
        <th class="col-lg-4">評価の感想、要望欄</th>
        <th class="col-lg-2">星5評価</th>
      </thead>
      <tbody>
        <% @rate.each do |rate| %>
          <tr data-toggle="modal" data-target="#rate<%= rate.id %>">

            <div class="modal fade" id="rate<%= rate.id %>" tabindex="-1" role="dialog" aria-labelledby="rateTitle" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="rateTitle">
                      <%= rate.user.name %>さんからの評価
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <h5>評価</h5>
                    <div id="star<%= rate.id %>"></div>
                    <br>
                    <h5>このサイトの感想、要望</h5>
                    <%= rate.text %>
                  </div>
                </div>
              </div>
            </div>

            <td><%= rate.user.id %></td>
            <td><%= rate.user.name %></td>
            <td><%= truncate(rate.text, length: 20, omission: "...") %></td>
            <td id="star_<%= rate.id %>"></td>
            <script>
              $(document).on('turbolinks:load', function() {
                let elem = document.getElementById('star<%= rate.id %>');
                if (!elem) return;

                elem.innerHTML = "";
                let opt = {
                  starOn: "<%= asset_path('star-on.png') %>",
                  starOff: "<%= asset_path('star-off.png') %>",
                  starHalf: "<%= asset_path('star-half.png') %>",
                  score: <%= rate.star %>,
                  readOnly: true,
                };
                raty(elem, opt);
              });
              $(document).on('turbolinks:load', function() {
                let elem = document.getElementById('star_<%= rate.id %>');
                if (!elem) return;

                elem.innerHTML = "";
                let opt = {
                  starOn: "<%= asset_path('star-on.png') %>",
                  starOff: "<%= asset_path('star-off.png') %>",
                  starHalf: "<%= asset_path('star-half.png') %>",
                  score: <%= rate.star %>,
                  readOnly: true,
                };
                raty(elem, opt);
              });
            </script>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
