<!--ユーザーログイン画面-->
<div class="container">
  <div class="w-50 mx-auto">
    <h2 class="text-center">会員ログイン</h2>
    <!--エラーメッセージ-->
    <div class="text-center">
      <% flash.each do |key, value| %>
        <%= content_tag :div, value, class: key, class:"text-danger" %>
      <% end %>
    </div>

    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br/>
        <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", placeholder: "メールアドレスを入力", class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %><br/>
        <%= f.password_field :password, autocomplete: "current-password", required: true, placeholder: "パスワードを入力", class:"form-control" %>
      </div>

      <div class="pt-2 text-center actions form-group">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>

    <p class="text-center">アカウントをお持ちでないですか？<span><%= render "public/shared/links" %></span></p>
  </div>
</div>
