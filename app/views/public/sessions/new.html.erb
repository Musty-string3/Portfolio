<!--ユーザーログイン画面-->
<div class="container">
  <h2>会員ログイン</h2>
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>

  <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "ログイン情報を保存" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <p>アカウントをお持ちでないですか？<span><%= render "public/shared/links" %></span></p>
</div>
