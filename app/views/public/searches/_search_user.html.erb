<!--ユーザー検索画面-->
<div class="row">
  <div class="col-12 col-md-10 mx-auto">
    <table class="table table-hover">
      <tbody>
        <% users.each do |user| %>
          <% if user_signed_in? %>
            <tr onclick='window.location="<%= user_path(user) %>"' role="link">
          <% else %>
            <tr onclick='window.location="<%= admin_user_path(user) %>"' role="link">
          <% end %>
            <td class="col-1">
              <%= image_tag user.profile_image, size: "75x75", class:"rounded-circle border border-dark" %>
            </td>
            <td>
              <span class="h5"><%= user.name %></span><br>
              <%= user.introduction %><br>
              フォロー中<%= user.followings.count %>
              フォロワー<%= user.followers.count %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>