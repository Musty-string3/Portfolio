<div class="container">
  <h2>会員新規登録</h2>
  
  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    
    <table class="table table-borderless">
      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td>名前</td>
          <td><%= f.label :first_name, "(姓)" %> <%= f.text_field :first_name, autofocus: true, placeholder: "苗字" %></td>
          <td><%= f.label :last_name, "(名)" %> <%= f.text_field :last_name, autofocus: true, placeholder: "名前" %></td>
        </tr>
        <tr>
          <td><%= f.label :name, "ニックネーム" %></td>
          <td colspan="2"><%= f.text_field :name, autofocus: true, placeholder: "ニックネーム" %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td colspan="2"><%= f.text_field :email, autofocus: true, placeholder: "メールアドレスを入力" %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
          <td colspan="2"><%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力" %></td>
        </tr>

        <tr>
          <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを入力" %></td>
        </tr>
      
        <tr>
          <td></td>
          <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
  <p>アカウントをお持ちですか？<span><%= render "public/shared/links" %></span></p>
</div>
