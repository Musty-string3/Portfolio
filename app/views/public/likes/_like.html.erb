<!--投稿にいいねした時の非同期通信-->
<% if post.like?(current_user) %>
  <%= link_to post_likes_path(post), method: :delete, remote: true do %>
    <i class="fa-solid fa-heart"></i><%= post.likes.count %>いいね
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true do %>
    <i class="fa-regular fa-heart"></i><%= post.likes.count %>いいね
  <% end %>
<% end %>