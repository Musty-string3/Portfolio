<div class="container">
  <div class="row">
    <div class="offset-lg-2 d-flex">
      <h5>"<%= @tag.name %>"タグの投稿一覧</h5>
      <p>(<%= @posts.count %>件)</p>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to user_path(post.user) do %>
              <%= image_tag post.user.get_profile_image(40, 40), class:"border border-dark rounded-circle" %>
              <%= post.user.name %>
              <br>
            <% end %>
            <%= link_to post_path(post) do %>
              <%= post.post_name %><br>
              <%= image_tag post.image, size: "150x125" %>
            <% end %>
          </td>
          <td>
            <%= post.explanation %><br>
            <% post.tags.each do |tag| %>
              <%= link_to tag_path(tag.id) do %>
                #<%= tag.name %>
              <% end %>
            <% end %>
            <br>
            <span id="post_<%= post.id %>"><%= render "public/likes/like", post: post %></span>
            <%= link_to "#{post.comments.count}コメント", post_path(post.id) %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
