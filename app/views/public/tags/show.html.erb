<div class="container">
  <div class="text-center pb-3">
    <span class="float-left">
      <%= link_to :back do %>
        <i class="fa-solid fa-arrow-left fa-xl text-dark"></i>
      <% end %>
    </span>
    <h4>
      "<%= @tag.name %>"タグの投稿一覧
      <span class="h6">
        (<%= @tag_posts.count %>件)
      </span>
    </h4>
  </div>
  <%= render 'public/posts/index', posts: @tag_posts %>
  <%= render 'public/posts/new_btn' %>
</div>
