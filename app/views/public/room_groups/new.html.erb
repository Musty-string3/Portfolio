<!--グループチャットの新規作成画面-->
<div class="container">
  <div class="col-12 col-md-10 mx-auto">
    <span class="float-left pt-1">
      <%= link_to room_groups_path do %>
        <i class="fa-solid fa-arrow-left fa-xl text-dark"></i>
      <% end %>
    </span>
    <h3 class="text-center pb-3">グループチャットの新規作成</h3>
    <%= render 'layouts/error_messages', resource: @group %>
    <%= form_with model: @group, url: room_groups_path, method: :post do |f| %>
      <%= render 'public/room_groups/form', group: @group, f: f %>
    <% end %>
  </div>
</div>