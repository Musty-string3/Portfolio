<!--メッセージフィールド-->
<ul class="col-12 col-lg-8 mx-auto list_none">
  <% messages.each do |message| %>
    <li class="mb-4">
      <% unless message.user.id == current_user.id %>
        <div class="row justify-content-start">
          <div class="col-10 col-md-8">
            <%= message.user.name %>
            <div class="d-flex">
              <%= image_tag message.user.get_profile_image(55, 55), class:"border border-dark rounded-circle", width: 35, height: 35 %>
              <div class="mt-1 ml-2">
                <div class="bg-info text-white p-2 rounded flex-wrap">
                  <%= message.text %>
                </div>
                <div class="text-right dm-time-ago">
                  <%= time_ago_in_words(message.created_at)+'前'%>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="row justify-content-end">
          <div class="col-10 col-md-8">
            <div class="d-flex justify-content-end">
              <div>
                <div class="bg-primary text-white p-2 rounded"><%= message.text %></div>
                <div class="text-left dm-time-ago"><%= time_ago_in_words(message.created_at)+'前'%></div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>