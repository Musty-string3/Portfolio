<ul class="dm-messages">
  <% messages.each do |message| %>
    <li class="mb-4">
      <% unless message.user.id == current_user.id %>
      <!--相手側-->
        <div class="dm-other-size">
          <div class="d-flex dm-image">
            <!--相手のプロフィール画像-->
            <div>
              <%= image_tag message.user.get_profile_image(35, 35), class:"border border-dark rounded-circle" %>
            </div>
            <!--相手からのメッセージ-->
            <div>
              <div class="bg-info text-white p-2 rounded">
                <%= message.text %>
              </div>
              <div class="text-right dm-time-ago">
                <%= time_ago_in_words(message.created_at)+'前'%>
              </div>
            </div>
          </div>
        </div>
      <!--相手側ここまで-->
      <% else %>
      <!--ログインユーザー側-->
        <div class="dm-current_user">
          <div class="d-flex justify-content-end">
            <div>
              <div class="bg-primary text-white p-2 rounded"><%= message.text %></div>
              <div class="text-left dm-time-ago"><%= time_ago_in_words(message.created_at)+'前'%></div>
            </div>
          </div>
        </div>
        <!--ログインユーザー側ここまで-->
      <% end %>
    </li>
  <% end %>
</ul>