<!--フォロー、フォロワー一覧-->
<div class="row">
  <div class="col-11 col-lg-8 mx-auto">
    <div class="row justify-content-center">
      <% if users.present? %>
        <table class="table table-hover text-nowrap">
          <tbody>
            <% @users.each do |user| %>
              <tr onclick='window.location="<%= user_path(user) %>"' role="link">
                <td class="col-1">
                  <%= image_tag user.get_profile_image(75, 75), class:"rounded-circle border border-dark", width: 50, height: 50 %>
                </td>
                <td class="col-11">
                  <h5><%= user.name %></h5>
                  <div class="d-none d-md-block"><%= user.introduction %></div>
                  <div class="d-flex flex-wrap">
                    フォロー数<span class="ml-1"><%= user.followings.count %></span>
                    フォロワー数<span class="ml-1"><%= user.followers.count %></span>
                    投稿数<span class="ml-1"><%= user.posts.count %></span>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h5 class="pt-3 text-center">ユーザーはいません</h5>
      <% end %>
    </div>
  </div>
</div>