<!--フォロー、フォロワー一覧-->
<div class="row">
  <div class="col-10 col-md-8 mx-auto">
    <div class="row justify-content-center">
      <% if users.exists? %>
        <table class="table text-center">
          <thead>
            <th>ユーザー</th>
            <th>投稿数</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <% if user == current_user %>
                    <%= link_to user_path(user) do %>
                      <%= image_tag user.get_profile_image(50, 50), class:"border border-dark rounded-circle", width: 35, height: 35 %>
                      <%= user.name %>(自分)
                    <% end %>
                  <% else %>
                    <%= link_to user_path(user) do %>
                      <%= image_tag user.get_profile_image(50, 50), class:"border border-dark rounded-circle", width: 35, height: 35 %>
                      <%= user.name %>
                    <% end %>
                  <% end %>
                </td>
                <td><%= user.posts.count %></td>
                <td><%= user.followings.count %></td>
                <td><%= user.followers.count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h5 class="pt-3 text-center">ユーザーはいません</h5>
      <% end %>
    </div>
  </div>
</div>