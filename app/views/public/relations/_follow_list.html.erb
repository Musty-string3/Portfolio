<!--フォロー、フォロワー一覧-->
<div class="row">
  <div class="col-10 col-md-8 mx-auto">
    <div class="row justify-content-center">
      <% if users.present? %>
        <table class="table">
          <thead>
            <th class="col-5">ユーザー</th>
            <th class="col-2">投稿数</th>
            <th class="col-2">フォロー数</th>
            <th class="col-2">フォロワー数</th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= image_tag user.get_profile_image(50, 50), class:"border border-dark rounded-circle", width: 35, height: 35 %>
                    <%= user == current_user ? "#{user.name}（自分）" : user.name %>
                  <% end %>
                </td>
                <td><%= user.posts.count %></td>
                <td><%= user.followings.count %></td>
                <td><%= user.followers.count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h5 class="pt-3 text-center">ユーザーはいません</h5>
      <% end %>
    </div>
  </div>
</div>