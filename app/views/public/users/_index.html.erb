<table class="table table-hover">
  <thead>
    <th class="col-lg-2">ユーザー</th>
    <th>自己紹介文</th>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to users_show_path(user.id) do %>
            <%= user.name %><br>
            <%= image_tag user.profile_image, size: "75x75" %>
          <% end %>
        </td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
  </tbody>
</table>