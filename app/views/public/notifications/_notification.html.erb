<table class="table table-hover">
  <% notifications.each do |notification| %>
    <tr>
      <td class="offset-lg-4 ">
        <%= link_to user_path(notification.visitor.id) do %>
          <%= image_tag notification.visitor.get_profile_image(40, 40), class:"border border-dark rounded-circle" %>
          <%= notification.visitor.name %>
        <% end %>さんが
        <!--いいね通知-->
        <% if notification.action == 'like' %>
          <%= link_to "あなたの投稿", post_path(notification.post_id) %>
          にいいねしました。
        <!--コメント通知-->
        <% elsif notification.action == 'comment' %>
          <%= link_to notification.visited.name+"の投稿", post_path(notification.comment.post) %>
          にコメントしました。
        <!--フォロー通知-->
        <% else %>
          あなたをフォローしました。
        <% end %>
        <i class="fa-regular fa-clock"></i><%= time_ago_in_words(notification.created_at) %>前
      </td>
    </tr>
  <% end %>
</table>