<!--通知一覧-->
<ul class="pl-0">
  <% notifications.each do |notification| %>
    <li class="border-bottom pb-1 pt-1 list_none">
      <!--TODO レスポンシブ対応わからない-->
      <div class="d-flex">
        <%= link_to user_path(notification.visitor.id), class:'text-dark' do %>
          <%= image_tag notification.visitor.get_profile_image(50, 50), class:"border border-dark rounded-circle", width: 30, height: 30 %>
          <span class="h5">
            <%= notification.visitor.name %>
            <span class="d-none d-lg-block">さんから通知が届きました！</span>
          </span>
        <% end %>
        <i class="pr-1 fa-regular fa-clock"></i><%= time_ago_in_words(notification.created_at) %>前
      </div>
      <div>
        <% if notification.action == 'like' %>
          <%= link_to notification.post.post_name, post_path(notification.post_id), class:'text-dark border-bottom border-dark' %>
          の投稿にいいねしました。
        <% elsif notification.action == 'comment' %>
          <%= link_to notification.post.post_name, post_path(notification.comment.post), class:'text-dark border-bottom border-dark' %>
          の投稿にコメントしました。
          <br>
          <span class="ml-2">「<%= truncate(notification.comment.text, length: 20, omission: "...") %>」</span>
        <% else %>
          あなたをフォローしました。
        <% end %>
      </div>
    </li>
  <% end %>
</ul>