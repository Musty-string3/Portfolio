<!--１対１のDM画面-->
<div class="container">
  <!--タブレットサイズ以上version-->
  <h5 class="text-center d-none d-md-block">
    <%= image_tag @current_entry.user.get_profile_image(60, 60), class:"border border-dark rounded-circle", width: 40, height: 40 %>
    あなたと
    <%= link_to user_path(@another_entry.user.id), class:"text-dark" do %>
      <%= image_tag @another_entry.user.get_profile_image(60, 60), class:"border border-dark rounded-circle", width: 40, height: 40 %>
      <%= @another_entry.user.name %>
    <% end %>
  </h5>
  <!--スマホversion-->
  <div class="text-center d-block d-md-none">
    <h3 class="">DM</h3>
      <%= link_to user_path(@another_entry.user.id), class:"text-dark" do %>
        <%= image_tag @another_entry.user.get_profile_image(40, 40), class:"border border-dark rounded-circle", width: 25, height: 25 %>
        <%= @another_entry.user.name%>
      <% end %>
    </p>
  </div>
  <div class="border-bottom pb-1"></div>
  <div id="messages">
    <%= render 'public/messages/messages', messages: @messages %>
  </div>
  <div class="col-12 col-lg-8 mx-auto">
    <%= form_with model: @message, url: messages_path, method: :post, local: false do |f| %>
      <div class="row">
        <div class="col-9 col-sm-10">
          <%= f.text_field :text, required: true, placeholder: "メッセージを入力してください", class:"w-100 form-control" %>
          <%= f.hidden_field :room_id, value: @room.id %>
        </div>
        <div class="col-3 col-sm-2 pl-0 mb-5">
          <%= f.submit "送信", class:"rounded-pill btn btn-success w-100" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
