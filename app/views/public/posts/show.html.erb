<div class="container">
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
  <div class="row">
    <div class="col-lg-3">
      <%= link_to user_path(@user) do %>
        <%= image_tag @post.user.get_profile_image(40, 40) %> <%= @post.user.name %>
      <% end %>
    </div>
    <div class="col-lg-offset-2 col-lg-4">
      <%= @post.post_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag @post.image, size: "200x150" %>
      <br>
      <% @post_tags.each do |tag| %>
        <%= link_to index_current_posts_path do %>
          <%= tag.name %>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-offset-1 col-lg-3">
      <%= @post.explanation %>
    </div>
  </div>
  <%= link_to "投稿を編集する", edit_post_path(@post) if @post.user == current_user %>

  <p>コメント件数<%= @post.comments.count%>件</p>
  <p id="post_<%= @post.id %>"><%= render "public/likes/like", post: @post %></p>
  <% @post.comments.each do |comment| %>
    <div class="row">
      <%= link_to user_path(comment.user) do %>
        <%= image_tag comment.user.get_profile_image(40, 40) %>
        <%= comment.user.name %>
      <% end %>
      <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      <%= link_to "コメントを削除", post_comment_path(comment.post, comment), method: :delete if comment.user == current_user %>
      <br>
      <%= comment.text %>
      <br>
    </div>
  <% end %>
  <div class="row">
    <%= form_with model: [@post, @comment] do |f| %>
      <%= f.text_area :text, placeholder: "コメント入力欄" %><br>
      <%= f.submit "コメントする" %>
    <% end %>
  </div>
</div>

