<div class="container">
  <h4>新規投稿</h4>
  <div class="row">
    <%= render 'layouts/error_messages', resource: @post %>
    <% if flash[:notice] %>
      <%= flash[:notice]  %>
    <% end %>
    <%= form_with model: @post do |f| %>
      <%= render 'form', f: f %>
      <%= f.text_field :tag, placeholder: "タグを入力" %>
      <%= f.submit "投稿する" %>
    <% end %>
  </div>
</div>
