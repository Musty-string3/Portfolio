<div class="container">
  <h4>投稿の編集</h4>
  <div class="row">
    <%= render 'layouts/error_messages', resource: @post %>
    <%= form_with model: @post do |f| %>
      <%= render 'form', f: f %>
      <%= f.text_field :tag, placeholder: "タグを入力", value: @tag_list %>
      <%= f.submit "投稿する" %>
    <% end %>
    <%= link_to "この投稿を削除する", post_path(@post.id), method: :delete %>
  </div>
</div>